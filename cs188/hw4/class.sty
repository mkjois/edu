  }%
  \begin{list}%
    {{\bf (\roman{subsubsection})}}%
    {%
      \setlength{\topsep}{0pt}%
      \setlength{\partopsep}{0pt}%
    }%
    \item \tfq{#1}
}%
{%
  \end{list}%
  \@atsubquestionend%
}%


